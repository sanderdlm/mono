{
    "name": "sanderdlm/mono",
    "description": "Framework for single file PHP applications",
    "type": "library",
    "license": "MIT",
    "require": {
        "php": "^8.2 || ^8.3",
        "nikic/fast-route": "^1.3",
        "twig/twig": "^3.7",
        "php-di/php-di": "^7.0",
        "laminas/laminas-httphandlerrunner": "^2.9",
        "relay/relay": "^2.1",
        "laminas/laminas-diactoros": "^3.3"
    },
    "require-dev": {
        "symfony/var-dumper": "^7.0",
        "phpstan/phpstan": "^1.9",
        "phpunit/phpunit": "^10",
        "squizlabs/php_codesniffer": "^3.8"
    },
    "autoload": {
        "psr-4": {
            "Mono\\": "src/"
        }
    },
    "autoload-dev":{
        "psr-4" : {
            "Mono\\Test\\": "tests/"
        }
    }
}
